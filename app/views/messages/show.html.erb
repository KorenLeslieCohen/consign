<section id="gallery-start" data-bottom-top="background-position: 50% -400px;" data-top-bottom="background-position: 50% 0px;">
  <h1 class="header">ADMIN PAGE</h1>
  <p class="header">MESSAGE</p>
</section>

<div class="admin-page">

  <p id="notice"><%= notice %></p>

  <div class="admin-table">
    <table align="center">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @message.created_at.strftime("%b %d, %Y") %></td>
          <td><%= @message.name %></td>
          <td><%= @message.email %></td>
          <td><%= @message.body %></td> 
          <td><%= link_to 'Back to Messages', messages_path %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="user-divide">
  </div>

  <%#= link_to 'Edit', edit_message_path(@message) %>

</div> 
