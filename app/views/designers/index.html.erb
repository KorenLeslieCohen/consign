<div class="designer-index">

<section id="gallery-start" data-bottom-top="background-position: 50% -400px;" data-top-bottom="background-position: 50% 0px;">
  <h1 class="header">DESIGNERS</h1>
  <p class="header">Shops By Designer</p>
</section>




<!-- DESIGNERS -->
<section id="services">
      <div class="container">
        <div class="row">
          <% @designers.each do |designer| %>
            <div class="col-sm-3">
              <div class="thumbnail">
                <div class="delight-icon-services">
                  <i class="icon-heart"></i>
                </div>
                <div class="caption">
                  <h2><%= link_to designer.name.upcase, designer %></h2>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  <!-- *** DESIGNERS END *** -->

</div>
