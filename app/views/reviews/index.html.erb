<section id="gallery-start" data-bottom-top="background-position: 50% -400px;" data-top-bottom="background-position: 50% 0px;">
  <h1 class="header">ADMIN PAGE</h1>
  <p class="header">REVIEWS LIST</p>
</section>
 
<p id="notice"><%= notice %></p>

<div class="admin-table">
  <table align="center">
    <thead>
      <tr>
        <th>No.</th>
        <th>Date</th>
        <th>Business</th>
        <th>User</th>
        <th>Rating</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% num = 0 %>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= num += 1 %></td>
          <td width="90"><%= review.created_at.strftime("%b %d, %Y") %></td>
          <td><%= link_to review.business.name, review.business %></td>
          <td><%= link_to review.user.first_name, review.user %></td>
          <td><%= review.rating %></td>
          <td><%= h(review.content).gsub(/\n/, '<br>').html_safe %></td>
          <td><%= link_to 'Show', review %></td>
          <td><%= link_to 'Edit', edit_review_path(review) %></td>
          <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

