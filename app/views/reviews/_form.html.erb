            <%= form_for [@business, Review.new], :remote => true do |f| %>
              <div class="field business-field">
                <%= f.number_field :rating, class: "form-control col-lg-8", placeholder: "Rating." %>
                <%= f.text_area :content, class: "form-control col-lg-8", placeholder: "Provide detailed review here." %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
              </div>
              <div class="actions">
                <%= f.submit "Review Business" %>
              </div>
            <% end %> 