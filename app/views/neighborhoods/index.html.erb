<h1>Listing neighborhoods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Borough</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= link_to neighborhood.name, neighborhood %></td>
        <td><%= link_to neighborhood.borough.name, neighborhood.borough %></td>
        <td><%= link_to 'Show', neighborhood %></td>
        <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
        <td><%= link_to 'Destroy', neighborhood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Neighborhood', new_neighborhood_path %>
